<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>URL shortener</h1>
    <% if (locals.shortId) { %>
    <p>Your shortened URL is: http://localhost:8001/url/<%= shortId %></p>
    <% } %>
    <div>
      <form method="POST" action="/url">
        <label>Enter your original URL</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Shorten</button>
      </form>
    </div>
    <h2>URLs</h2>
    <% if (urls) { %>
      <table>
        <thead>
          <tr>
            <th>Short ID</th>
            <th>Original URL</th>
            <th>Visits</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach(url => { %>
          <tr>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
    
  </body>
</html>
